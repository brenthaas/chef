#!/bin/bash --login

exec 2>&1
exec <%= node[:runit][:chpst_bin] %> -u <%= @options[:user] %>:<%= @options[:group] %> \
  <%= File.join(@options[:working_directory], 'bin', (@options[:smells_like_rack] ? 'unicorn' : 'unicorn_rails')) %> \
    -E <%= @options[:rack_env] %> \
    -c <%= @options[:unicorn_config_file] %>

